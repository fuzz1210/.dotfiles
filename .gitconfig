# .gitconfig

[user]
    name                = fuzz1210
    email               = fuzz1210@gmail.com
[core]
    editor              = vim
    pager               = less
[color]
    ui                  = true
[color "branch"]
    current             = green bold
    local               = green
[color "status"]
    added               = green
    changed             = yellow
    unmerged            = yellow
    untracked           = red
[color "decorate"]
    HEAD                = green bold
    branch              = green
    remoteBranch        = red
    stash               = yellow
[color "diff"]
    meta                = yellow reverse
    frag                = cyan reverse
    old                 = red
    new                 = green
[color "grep"]
    linenumber          = yellow
    match               = red bold
    separator           = white
    filename            = cyan
[log]
    date                = iso
[diff]
    compactionHeuristic = true
    renames             = true
    tool                = vimdiff
[difftool]
    prompt              = false
[grep]
    linenumber          = true
[commit]
    verbose             = true
[merge]
    ff                  = false
    conflictstyle       = diff3
[mergetool]
    prompt              = false
    keepBackup          = false
[pull]
    ff                  = only
[push]
    default             = simple
[pager]
    branch              = less -FX
    log                 = diff-highlight | less
    show                = diff-highlight | less
    diff                = diff-highlight | less
[alias]
    cf   = config
    cfg  = !git cf --global
    sh   = show
    l    = log --graph --abbrev-commit --date=short --date-order --find-renames --pretty=format:'%C(yellow)%h%Creset %C(cyan)%ad%Creset %C(cyan)(%ar)%Creset %C(blue)%an%Creset%C(auto)%d%Creset%n~ %C(white)%s%Creset%n'
    la   = !git l --all
    ls   = !git l --stat
    ln   = !git l --name-status
    b    = branch
    bv   = !git b --verbose --verbose
    ba   = !git bv --all
    c    = checkout
    s    = status --branch --short
    st   = stash
    a    = add
    ai   = !git a --interactive
    ap   = !git a --patch
    r    = reset
    rs   = !git r --soft
    rm   = !git r --mixed
    rh   = !git r --hard
    rs1  = !git r --soft HEAD^
    rm1  = !git r --mixed HEAD^
    rh1  = !git r --hard HEAD^
    d    = diff --ignore-all-space
    dn   = !git d --name-status
    ds   = !git d --staged
    dns  = !git dn --staged
    dt   = difftool
    dts  = !git dt --staged
    g    = grep --full-name -I
    gi   = !git g --ignore-case
    bl   = blame
    cm   = commit
    cmm  = commit --message
    f    = fetch --prune
    m    = merge
    mt   = mergetool
    rb   = rebase
    rbi  = !git rb --interactive
    cp   = cherry-pick
    pl   = pull
    plrb = !git pl --rebase
    ps   = push
