# .gitconfig

[user]
	name      = fuzz1210
	email     = fuzz1210@gmail.com
[core]
	editor    = vim
[color]
	ui        = true
[color "status"]
	added     = green
	changed   = yellow
	unmerged  = yellow
	untracked = red
[color "diff"]
	meta      = yellow
	frag      = cyan
	old       = red
	new       = green
[diff]
	compactionHeuristic = true
	renames             = true
	tool                = vimdiff
[difftool]
	prompt    = false
[commit]
	verbose   = true
[merge]
	ff        = false
[pull]
	ff        = only
[push]
	default   = simple
[pager]
	log       = diff-highlight | less
	show      = diff-highlight | less
	diff      = diff-highlight | less
[alias]
	cf        = config
	cfg       = config --global
	sh        = show
	l         = log --graph --date=short --date-order --pretty=format:'%C(white reverse) %h %Creset %C(green)%an%Creset %C(cyan)%ad%Creset %C(white)%s%Creset%C(yellow)%d%Creset%n'
	ls        = log --graph --date=short --date-order --pretty=format:'%C(white reverse) %h %Creset %C(green)%an%Creset %C(cyan)%ad%Creset %C(white)%s%Creset%C(yellow)%d%Creset%n' --stat
	ln        = log --graph --date=short --date-order --pretty=format:'%C(white reverse) %h %Creset %C(green)%an%Creset %C(cyan)%ad%Creset %C(white)%s%Creset%C(yellow)%d%Creset%n' --name-status
	la        = log --graph --date=short --date-order --pretty=format:'%C(white reverse) %h %Creset %C(green)%an%Creset %C(cyan)%ad%Creset %C(white)%s%Creset%C(yellow)%d%Creset%n' --all
	b         = branch
	c         = checkout
	s         = status -sb
	a         = add
	r         = reset --mixed
	rs        = reset --soft
	rh        = reset --hard
	r1        = reset --mixed HEAD^
	rs1       = reset --soft HEAD^
	rh1       = reset --hard HEAD^
	d         = diff -w
	ds        = diff -w --staged
	dn        = diff -w --name-only
	dsn       = diff -w --staged --name-only
	dt        = difftool
	dts       = difftool --staged
	g         = grep --full-name -nI
	gi        = grep --full-name -nIi
	bl        = blame
	cm        = commit -m
	cma       = commit -ma
	cmv       = commit -v
	rb        = rebase
	rbi       = rebase -i
	cp        = cherry-pick
	f         = fetch
	mg        = merge origin
	pl        = pull
	ps        = push
