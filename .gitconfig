# .gitconfig



[user]
	name = fuzz1210
	email = fuzz1210@gmail.com
[color]
	ui = true
[alias]
	cf = config
	cfg = config --global
	lg = log --graph --date=iso --pretty=format:'--------------------------------------------------------------------------------%n%C(white reverse) %h %Creset %C(green)%an%Creset %C(cyan)%ad (%ar)%Creset%C(yellow)%d%Creset%n%n%C(white)%s%Creset%n'
	lgn = log --graph --date=iso --name-status --pretty=format:'--------------------------------------------------------------------------------%n%C(white reverse) %h %Creset %C(green)%an%Creset %C(cyan)%ad (%ar)%Creset%C(yellow)%d%Creset%n%n%C(white)%s%Creset%n'
	br = branch
	bra = branch -a
	ch = checkout
	st = status
	df = diff -w -U1
	dfw = diff -w --color-words -U1
	ad = add
	rss = reset --soft
	rsm = reset --mixed
	rsh = reset --hard
	cm = commit -m
	cma = commit -a -m
	ps = push
	fc = fetch
	mg = merge
	pl = pull
[push]
	default = simple
[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
